<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeekActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:backgroundTint="@color/cardBackgroundColor"
        android:forceDarkAllowed="false"
        android:onClick="Ganesh1"
        android:text="←"
        android:textAlignment="gravity"
        android:textColor="#ec5c45"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button_luni"
        android:layout_width="180dp"
        android:layout_height="145dp"
        android:backgroundTint="@color/cardBackgroundColor"
        android:onClick="Ganesh2"
        android:text="@string/luni"
        android:textColor="#ec5c45"
        android:textSize="20dp"
        app:iconPadding="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_marti"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.194" />

    <Button
        android:id="@+id/button_marti"
        android:layout_width="180dp"
        android:layout_height="145dp"
        android:backgroundTint="@color/cardBackgroundColor"
        android:onClick="Ganesh2"
        android:text="@string/marti"
        android:textColor="#ec5c45"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.196" />

    <Button
        android:id="@+id/button_miercuri"
        android:layout_width="180dp"
        android:layout_height="145dp"
        android:backgroundTint="@color/cardBackgroundColor"
        android:onClick="Ganesh2"
        android:text="@string/miercuri"
        android:textColor="#ec5c45"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_joi"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_luni"
        app:layout_constraintVertical_bias="0.137" />

    <Button
        android:id="@+id/button_joi"
        android:layout_width="180dp"
        android:layout_height="145dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/cardBackgroundColor"
        android:onClick="Ganesh2"
        android:text="@string/joi"
        android:textColor="#ec5c45"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_marti"
        app:layout_constraintVertical_bias="0.073" />

    <Button
        android:id="@+id/button_vineri"
        android:layout_width="180dp"
        android:layout_height="145dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/cardBackgroundColor"
        android:onClick="Ganesh2"
        android:text="@string/vineri"
        android:textColor="#ec5c45"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@id/button_joi"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@id/button_miercuri"
        app:layout_constraintTop_toBottomOf="@id/button_joi" />


</androidx.constraintlayout.widget.ConstraintLayout>